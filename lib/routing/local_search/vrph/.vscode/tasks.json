{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build python library",
            "type": "shell",
            "command": "make -f makefile-pybind.mk",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build source",
            "type": "shell",
            "command": "make -f makefile-source.mk",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "run build bash", 
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "jonas_full_build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/**.cpp",
                "-o",
                "${workspaceFolder}/VRPH.so",
                "-shared",
                "-std=c++17",
                "-fPIC",
                "--include-directory=/home/jones/miniconda3/envs/l2o/include/python3.8",
                "--include-directory=/home/jones/miniconda3/envs/l2o/lib/python3.8/site-packages/pybind11/include",
                "--include-directory=/mnt/_data/PycharmProjects/l2o_meta/lib/local_search/vrph/inc",
                "$(/home/jones/miniconda3/envs/l2o/bin/python3.8-config --cflags --ldflags --embed)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}